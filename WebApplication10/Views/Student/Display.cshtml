@model WebApplication10.Models.Student

@{
    ViewData["Title"] = "Display";
}
<div class="banner display-banner">
    <h1 class="banner-title">Student Information</h1>
</div>

<div class="text-div">

<br /><br />

<div>
        <h4><ion-icon name="person"></ion-icon>@Html.DisplayFor(model => model.Name)'s Information</h4>

    <br /><br /><br />

    <dl class="row inline-data">
        <dt class = "col-sm-2 display-none">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <h4 class = "display-none">Id</h4>
        <p class = "display-none">@Model.id</p>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentID)
        </dd>

        <div class="horizontal-line"></div>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <div class="horizontal-line"></div>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <div class="horizontal-line"></div>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <div class="horizontal-line"></div>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MobileNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MobileNumber)
        </dd>

        <div class="horizontal-line"></div>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    </div>

    <div class="update-button">
        @Html.ActionLink("Edit", "Update", new { id = Model.id })
    </div>

    <div class="back-button">
        <a asp-action="Index"><ion-icon name="arrow-back"></ion-icon> Back to List</a>
    </div>

    <div class="send-email-button">
        <form asp-action="SendEmail" method="post">
            <input type="hidden" name="studentId" value="@Model.id" />
            <button type="submit">Send To Email</button>
        </form>
    </div>
</div>

<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
